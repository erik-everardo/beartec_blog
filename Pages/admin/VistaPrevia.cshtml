@page
@model erik_tech.Pages.admin.VistaPrevia
@{
    ViewData["title"] = "Vista previa - " + @Model.articulo.titulo_publicacion;
}
<article class="container">
    <div class="alert alert-warning alert-dismissible">
        <i class="fas fa-exclamation-circle"></i>
        Esta es una <strong>vista previa</strong> (este mensaje no se mostrará cuando tu artículo sea leído)
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <section>
        <h2>@Model.articulo.encabezado</h2>
    </section>
    <p>Publicado el: @Convert.ToDateTime(Model.articulo.fecha_publicacion).Date.ToString("dd/MM/yyyy") por <a asp-page="/Perfiles" asp-route-user="@Model.BuscarNombreAutorPorIdArticulo(@Model.articulo.autor_id)">@Model.BuscarNombreAutorPorIdArticulo(@Model.articulo.autor_id)</a></p>

    <hr>
    <div>@Html.Raw(Model.articulo.cuerpo)</div>
</article>